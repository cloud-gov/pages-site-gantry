{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "moduleResolution": "node",
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  }
}
