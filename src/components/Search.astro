const affliate = "FILL IN VIA GLOBAL";
---

<form
  id="search_form"
  class="usa-search usa-search--small"
  action="/search"
  accept-charset="UTF-8"
  method="get"
>
  <input name="utf8" type="hidden" value="âœ“" />
  <input name="affiliate" type="hidden" value={affliate} />

  <div role="search">
    <label class="usa-sr-only" for="extended-search-field-small"
      >Search small</label
    >
    <input
      class="usa-input usagov-search-autocomplete"
      id="extended-search-field-small"
      type="search"
      name="query"
      autocomplete="off"
    />
    <button class="usa-button" type="submit">
      <img
        src="./node_modules/@uswds/uswds/dist/img/usa-icons-bg/search--white.svg"
        class="usa-search__submit-icon"
        alt="Search"
      />
    </button>
  </div>
</form>
