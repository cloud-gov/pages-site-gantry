---
interface Button {
  label: string;
  url: string;
  variant?: string;
}

interface Props {
  heading?: string;
  classes?: string;
  id?: string;
  color?: string;
  align?: "center" | "left";
  fullWidth?: boolean;
}

const {
  heading = false,
  color = "white",
  align = "left",
  classes = "",
  id = false,
  fullWidth = false,
} = Astro.props;
---

<section
  {...id && { id }}
  class={`usa-section section section--${color} align-${align} ${classes}`}
>
  <div class="grid-container">
    <div class="grid-row">
      <div class={fullWidth ? "grid-col-12" : "grid-col-8"}>
        <div class="section__container">
          <div class="section__intro">
            {heading && <h1 class="margin-bottom-2">{heading}</h1>}
          </div>
          <div class="section__slot">
            <slot />
          </div>
        </div>
      </div>
      {!fullWidth && (
        <div class="grid-col-4">
          <slot name="sidebar" />
        </div>
      )}
    </div>
  </div>
</section>

<style>
  /* Remove top padding from usa-section */
  section {
    padding-top: 2rem;
  }

  &.align-left .section__container {
    text-align: left;
    justify-items: start;
  }

  &.align-center .section__container {
    .section__intro,
    .section__content,
    .section__slot,
    .section__outro {
      margin-left: auto;
      margin-right: auto;
      text-align: center;
      justify-items: center;
    }
  }
  .section__slot {
    padding: 1rem 0;
  }
</style>
