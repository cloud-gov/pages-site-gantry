---
import CollectionItemList from "@/components/CollectionItemList.astro";
import PagesSection from "@/components/PagesSection.astro";
import Layout from "@/layouts/Layout.astro";
import { newsMapper } from "@/utilities/contentMapper";
import payloadFetch from "@/utilities/payload-fetch";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import { paginate } from "@/utilities/pagination";
import PaginationNav from "@/components/PaginationNav.astro";

const PAGE_SIZE = 10;
const siteUrl = import.meta.env.BASEURL || "";
const { page } = Astro.params;

const currentPage = parseInt(page) || 1;

const collectionName = "news";
let news: CollectionEntry<typeof collectionName>["data"][];

if (!Astro.isPrerendered) {
  const response = await payloadFetch(`${collectionName}?draft=true&limit=0`);
  const newsData = await response.json();
  news = newsData.docs;
} else {
  const newsCollection = await getCollection(collectionName);
  news = newsCollection.map((n) => n.data);
}

const sortedNews = news.sort((a, b) => {
  const dateA = new Date(a.publishedAt);
  const dateB = new Date(b.publishedAt);
  return dateB.getTime() - dateA.getTime();
})

const { totalPages, paginatedItems } = paginate(sortedNews, currentPage, PAGE_SIZE);

const items = paginatedItems.map(newsMapper);
---

<Layout title="News" canonical="/news/page/1">
  <PagesSection heading="News" color="gray-10">
    <CollectionItemList items={items}/>
    {news.length >= PAGE_SIZE && (
      <PaginationNav currentPage={currentPage} totalPages={totalPages} basePath={`${siteUrl}/news/page`} />
    )}
  </PagesSection>
</Layout>
