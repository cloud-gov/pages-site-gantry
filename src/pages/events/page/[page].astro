---
import CollectionItemList from "@/components/CollectionItemList.astro";
import PagesSection from "@/components/PagesSection.astro";
import Layout from "@/layouts/Layout.astro";
import PaginationNav from "@/components/PaginationNav.astro";
import {
  getPaginatedCollectionData,
  createPagingStaticPath,
  eventsMapper,
} from "@/utilities/fetch";

export const PAGE_SIZE = import.meta.env.PAGE_SIZE || 10;
const { page } = Astro.params;
const currentPage = parseInt(page) || 1;

const collectionName = "events";

const { items, totalPages, hasPaginationNav } =
  await getPaginatedCollectionData(
    collectionName,
    currentPage,
    PAGE_SIZE,
    eventsMapper,
  );

export const getStaticPaths = createPagingStaticPath(PAGE_SIZE, "events");
export const prerender = true;
---

<Layout title="events" currentPage={currentPage} totalPages={totalPages}>
  <PagesSection
    heading="Events"
    filteredPageConfig={{
      collectionName,
      pageSize: PAGE_SIZE,
      currentPage,
    }}
  >
    <CollectionItemList showEvent hideDate={true} items={items} />
    {
      hasPaginationNav && (
        <PaginationNav
          currentPage={currentPage}
          totalPages={totalPages}
          basePath="/events/page"
        />
      )
    }
  </PagesSection>
</Layout>
