---
import { type CollectionEntry } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import { createGetStaticPath, fetchSlug } from "@/utilities/fetch";
import RichText from "@/components/RichText.astro";
import PagesSection from "@/components/PagesSection.astro";
import Tags, { type Tag } from "@/components/Tags.astro";
import { reportMapper } from "@/utilities/contentMapper";
import Media from "@/components/Media.astro";
import PreviewReload from "@/components/PreviewReload.astro";

const { slug } = Astro.params;
const collectionName = "reports";
let data: CollectionEntry<typeof collectionName>["data"];

if (!Astro.isPrerendered) {
  data = await fetchSlug(collectionName, slug);
  if (!data) return Astro.redirect("/404");
} else {
  // @ts-expect-error
  ({ data } = Astro.props);
}

export const getStaticPaths = createGetStaticPath("reports");

const report = reportMapper(data);

export const prerender = import.meta.env.PREVIEW_MODE || false;
---

<Layout title={report.title}>
  <PagesSection>
    <div class="flex-column margin-bottom-5">
      <h1 set:text={report.title} />
      {data.image && <Media media={data.image} />}
      <p class="font-sans-sm text-italic" set:text={report.date} />
      <ul
        class="usa-collection__meta display-flex"
        aria-label="More information"
      >
        <Tags tags={report.tags} />
      </ul>
    </div>
    <RichText content={report.content} />
  </PagesSection>
</Layout>

<PreviewReload />
